use('mz_store');

db.createCollection('store', {
  validator: {
    $jsonSchema: {
      bsonType: 'object',
      required: ['_id', 'name'],
      properties: {
        _id: { bsonType: 'objectId' },

        name: {
          bsonType: 'string',
          description: "'name' must be a string and is required",
        },

        image: {
          bsonType: 'string',
        },
        description: {
          bsonType: 'string',
        },
      },
    },
  },
});
