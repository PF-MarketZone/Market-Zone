{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["src", "node_modules"]
      }
    }
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "import/no-unresolved": 0,
    "no-console": "warn"
  }
}
